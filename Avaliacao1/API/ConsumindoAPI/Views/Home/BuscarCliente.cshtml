@{ Layout = "_Layout"; }
@model API.Models.Cliente
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<p></p>

<div class="card" style="width: 18rem;">
    <svg class="bd-placeholder-img card-img-top" width="100%" height="180"  role="img">
    <title>Placeholder</title><rect width="100%" height="100%" fill="#868e96" />
    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Foto do cliente</text>
    </svg>

    <div class="card-body">
        <h5 class="card-title">Dados do cliente</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">ID: @Model.ClienteId</li>
        <li class="list-group-item">Nome: @Model.Nome</li>
        <li class="list-group-item">Porte da empresa: @Model.PorteEmpresa</li>
    </ul>
    <div class="card-body">
        <form asp-action="RemoverCliente" method="get">
            <div class="form-group">
                <input type="hidden" value="@Model.ClienteId" asp-for="ClienteId" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Remove cliente</button>
        </form>
    </div>
</div>