@model Cliente

@{
    Layout = "_Layout";
}

<head>
    <title>Atualizar cliente</title>
</head>
<body>
<div class="col-md-3">
    <form asp-action="Atualizar">
        <input type="hidden" asp-for="ClienteId"/>
        <div class="form-group">
            <label asp-for="Nome" class="col-form-label"></label>
            <input asp-for="Nome" class="form-control"/>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PorteEmpresa" class="col-form-label">Porte da empresa</label>
            <select asp-for="PorteEmpresa" class="form-control">
                <option value="Pequeno" class="custom-select-sm">Pequeno</option>
                <option value="Medio" class="custom-select-sm">Medio</option>
                <option value="Grande" class="custom-select-sm">Grande</option>
            </select>
            <span asp-validation-for="PorteEmpresa" class="text-danger"></span>
        </div>
        
        <input type="submit" value="Atualizar" class="btn btn-info"/>
    </form>
</div>
<br/><br/>
<a asp-action="Index" class="bnt btn-link">Voltar</a>
</body>
